<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.sumu.mobliesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:desc_off="自动更新已关闭"
        itheima:desc_on="自动更新已开启"
        itheima:setting_title="自动更新设置">
    </com.sumu.mobliesafe.view.SettingItemView>

    <com.sumu.mobliesafe.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:desc_off="归属地已关闭"
        itheima:desc_on="归属地已开启"
        itheima:setting_title="电话归属地显示设置">
    </com.sumu.mobliesafe.view.SettingItemView>

    <com.sumu.mobliesafe.view.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
    </com.sumu.mobliesafe.view.SettingClickView>
    <com.sumu.mobliesafe.view.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
    </com.sumu.mobliesafe.view.SettingClickView>

    <com.sumu.mobliesafe.view.SettingItemView
        android:id="@+id/siv_rocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:desc_off="小火箭已关闭"
        itheima:desc_on="小火箭已开启"
        itheima:setting_title="小火箭开关设置">
    </com.sumu.mobliesafe.view.SettingItemView>

    <com.sumu.mobliesafe.view.SettingItemView
        android:id="@+id/siv_call_safe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:desc_off="黑名单已关闭"
        itheima:desc_on="黑名单已开启"
        itheima:setting_title="黑名单开关设置">
    </com.sumu.mobliesafe.view.SettingItemView>
</LinearLayout>
